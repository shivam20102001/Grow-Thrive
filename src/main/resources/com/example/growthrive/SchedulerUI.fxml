<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.growthrive.ui.SchedulerUIController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER" prefWidth="580.0">
        <Label text="Scheduler Settings" style="-fx-font-size: 18px;"/>

        <!-- Time Picker -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Run Scheduler At:"/>
            <TextField fx:id="timePicker" promptText="HH:mm (24-hour format)" prefWidth="100"/>
        </HBox>

        <!-- Frequency Options -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Frequency:"/>
            <ComboBox fx:id="frequencyDropdown" prefWidth="150">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Daily"/>
                        <String fx:value="Weekly"/>
                        <String fx:value="Custom"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <!-- Enable/Disable Specific Schedulers -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Enable Schedulers:"/>
            <CheckBox fx:id="goalSchedulerCheckBox" text="Goals"/>
            <CheckBox fx:id="healthSchedulerCheckBox" text="Health Routines"/>
        </VBox>

        <!-- Save Button -->
        <Button text="Save and Apply" onAction="#saveSchedulerSettings" prefWidth="150"/>
    </VBox>
</AnchorPane>
